{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    /* Modules */
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client"],

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "outDir": "dist",

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,

    /* Type Checking */
    "strict": true
  },
  "include": ["src/**/*"]
}
