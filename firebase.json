{
  "hosting": [
    {
      "target": "builder-frontend",
      "public": "./builder-frontend/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "emulators": {
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true,
    "auth": {
      "port": 9099
    }
  },
  "storage": {
    "rules": "storage.rules"
  }
}
