{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "maven@latest",
    "quarkus@latest",
    "jdk21@latest",
    "nodejs@20",
    "firebase-tools@latest",
    "google-cloud-sdk@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!'",
      "command -v mise >/dev/null && mise deactivate || true"
    ],
    "scripts": {
      "setup": [
        "bin/setup"
      ]
    }
  }
}
